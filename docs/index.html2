<!DOCTYPE html>
<html lang="bn">
<head>
  <meta charset="UTF-8">
  <title>বিদ্যুৎ বিল চেক করুন</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f0f0f0;
      padding: 30px;
    }
    .container {
      max-width: 600px;
      margin: auto;
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px #aaa;
    }
    input, button {
      width: 100%;
      padding: 10px;
      margin-top: 10px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 8px;
      text-align: center;
    }
    th {
      background: #eee;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>বিদ্যুৎ বিল চেক করুন</h2>
    <input type="text" id="roomId" placeholder="রুম আইডি লিখুন (যেমন: R101)">
    <button onclick="checkBill()">বিল খুঁজুন</button>
    <div id="billResult"></div>
  </div>

  <script>
    const billData = {
      "R101": { name: "Room 5TH-C", bills: { Jan: 290, Feb: 120, Mar: 460, Apr: 660, May: 000, Jun: 000, Jul: 000, Aug: Not submitted yet, Sep: Not submitted yet, Oct: Not submitted yet, Nov: Not submitted yet, Dec: Not submitted yet }},
      "R102": { name: "Room 5TH-D", bills: { Jan: 290, Feb: 360, Mar: 440, Apr: 1160, May: 990, Jun: 1250, Jul: 1000, Aug: Not submitted yet, Sep: Not submitted yet, Oct: Not submitted yet, Nov: Not submitted yet, Dec: Not submitted yet }},
      "R103": { name: "Room 4TH-A", bills: { Jan: 510, Feb: 210, Mar: 580, Apr: 910, May: 670, Jun: 500, Jul: 700, Aug: Not submitted yet, Sep: Not submitted yet, Oct: Not submitted yet, Nov: Not submitted yet, Dec: Not submitted yet }},
      "R104": { name: "Room 4TH-B", bills: { Jan: 1130, Feb: 1440, Mar: 1330, Apr: 000, May: 670, Jun: 1690, Jul: 1370, Aug: Not submitted yet, Sep: Not submitted yet, Oct: Not submitted yet, Nov: Not submitted yet, Dec: Not submitted yet }}
    };

    function checkBill() {
      const roomId = document.getElementById('roomId').value.trim().toUpperCase();
      const resultDiv = document.getElementById('billResult');

      if (billData[roomId]) {
        const bills = billData[roomId].bills;
        let table = `<h3>${billData[roomId].name}</h3><table><tr><th>মাস</th><th>বিল (৳)</th></tr>`;
        for (const month in bills) {
          table += `<tr><td>${month}</td><td>${bills[month]}</td></tr>`;
        }
        table += "</table>";
        resultDiv.innerHTML = table;
      } else {
        resultDiv.innerHTML = "<p style='color:red;'>রুম আইডি খুঁজে পাওয়া যায়নি।</p>";
      }
    }

    // Auto-fill if URL has ?room=R101
    window.onload = () => {
      const params = new URLSearchParams(window.location.search);
      const room = params.get("room");
      if (room) {
        document.getElementById("roomId").value = room;
        checkBill();
      }
    };
  </script>
</body>
</html>
